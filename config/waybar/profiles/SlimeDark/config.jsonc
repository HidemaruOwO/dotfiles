  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon} {volume}% {format_source}",
    "format-muted": "ï‘¦  {format_source}",
    "format-source": "ï„° {volume}%",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ğŸ§",
      "phone": "ï‚•",
