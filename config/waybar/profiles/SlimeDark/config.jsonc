{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,

  "height": 46,
  //"width": 1350,
  "margin": "0, 0, 0, 0",
  // Choose the order of the modules
  "modules-left": [
    "custom/launch_wofi",
    "custom/window-name",
    "sway/workspaces",
    "hyprland/workspaces",
    "sway/mode",
    "cpu",
    "custom/separator",
    "memory",
    "custom/recorder",
    "custom/audiorec"
  ],
  "modules-center": [
    "custom/lock_screen",
    "custom/separator",
    "tray",
    "mpd",
    "custom/separator",
    "custom/updates"
  ],
  "modules-right": [
    "idle_inhibitor",
    "custom/separator",
    "network",
    "custom/separator",
    "backlight",
    "custom/separator",
    "battery",
    "custom/separator",
    "pulseaudio",
    "custom/separator",
    "clock"
  ],

  // Modules configuration
  "sway/workspaces": {
