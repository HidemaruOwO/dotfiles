    },
    "on-click": "~/.config/waybar/scripts/volume --toggle",
    "on-click-right": "~/.config/waybar/scripts/volume --toggle-mic"
  },
  "mpd": {
    "format": "{stateIcon} {artist} - {title}",
    "format-disconnected": "ğŸ¶",
    "format-stopped": "â™ª",
