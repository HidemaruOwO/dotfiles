    "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"],
    "on-scroll-up": "echo 0",
    "on-scroll-down": "echo 0",
    "tooltip": false
  },
  "battery": {
    "interval": 60,
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} &#8239;{capacity}%",
    "format-charging": "ïƒ§ &#8239;{capacity}%",
    "format-plugged": "ïƒ§ &#8239;{capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
    "tooltip": false
    // "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },
  "network": {
    "interval": 30,
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "{icon}",
    "format-ethernet": "{icon}",
    "format-linked": "ó°¤¦ ",
    "format-disconnected": "âœˆ",
    "format-alt": "{icon} {ifname}: {ipaddr}/{cidr}",
    "format-icons": ["ó°¤Ÿ", "ó°¤¢", "ó°¤¥", "ó°¤¨"],
