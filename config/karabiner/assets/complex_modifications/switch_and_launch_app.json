{
  "title": "hotkeys to switch app",
  "rules":
  [
    {
      "description": "ctrl-E to Vivaldi",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'vivaldi'"
            }
          ]
        }
      ]
    },
